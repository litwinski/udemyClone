<h3 class="text-center"><%= @lecture.seq_number %>. <%= @lecture.name %></h3>
<div class="container-fluid">
  <div class="row">
    <div class="col-lg-9 col-md-12">
      <% if @lecture.url == "" %>
          <h5>INSTRUCTIONS</h5>
          <div style="width:100%; height:250px; overflow: auto;" >
            <p><%= raw(@lecture.instructions) %></p>
          </div>
      <% else %>
          <div class="videoWrapper thumbnail">
            <%= raw(@lecture.url) %>
          </div>
          <div class="hidden-lg">
            <h5>INSTRUCTIONS</h5>
            <div style="width:100%; height:150px; overflow: auto;" >
              <p><%= raw(@lecture.instructions) %></p>
            </div>
          </div>
      <% end %>
      <div>
      <% unless @plecture.nil? %>
          <div class="pull-left">
            <%= link_to ('<i class="fa fa-arrow-left"></i> Previous Lecture').html_safe, course_lecture_path(@plecture.course, @plecture), class: "btn btn-danger" %>
          </div>
      <% end %>
      <% unless @nlecture.nil? %>
          <div class="pull-right">
            <%= link_to ('Next Lecture <i class="fa fa-arrow-right"></i>').html_safe, course_lecture_path(@nlecture.course, @nlecture), class: "btn btn-danger" %>
          </div>
      <% end %>
      </div>
      <br/>
      <%= render 'comments' %>
    </div>
    <div class="col-lg-3 hidden-md hidden-sm hidden-xs">
      <h5>DESCRIPTION</h5>
      <div style="width:100%; height:250px; overflow: auto;" >
        <small><%= raw(@lecture.description) %></small>
      </div>
      <% if @lecture.url != "" %>
          <h5>INSTRUCTIONS</h5>
          <div style="width:100%; height:250px; overflow: auto;" >
            <p><%= raw(@lecture.instructions) %></p>
          </div>
      <% end %>
    </div>
  </div>
</div>

<style>
    .videoWrapper {
        position: relative;
        padding-bottom: 45.25%; /* 16:9 */
        padding-top: 25px;
        height: 0;
    }
    .videoWrapper iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }
</style>