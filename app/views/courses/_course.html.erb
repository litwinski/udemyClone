<div class="col-lg-3 col-md-4 col-sm-6 column productbox">
  <%= link_to course_path(course) do %>
  <%= image_tag "rails1.jpg", class: "img-responsive" %>
  <% end %>
  <div class="producttitle"><%= course.name %></div>
  <div class="productprice">
    <div class="pull-right">
      <% if course.price > 0 %>
          <a href="#" class="btn btn-danger btn-sm" role="button">
            BUY
          </a>
      <% else %>
          <a href="#" class="btn btn-success btn-sm" role="button">
            FREE
          </a>
      <% end %>
    </div>
    <div class="pricetext">
    <% if course.price > 0 %>
      &euro; <%= course.price %>
    <% else %>
      FREE
    <% end %>
    </div>
  </div>
</div>