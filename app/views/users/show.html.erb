<div class="container-fluid">
  <div class="row profile">
    <div class="col-md-3">
      <div class="profile-sidebar">
        <!-- SIDEBAR USERPIC -->
        <div class="profile-userpic text-center">
          <%= gravatar_tag @user.email, size: 200, html: {class: "img-rsponsive"} %>
        </div>
        <!-- END SIDEBAR USERPIC -->
        <!-- SIDEBAR USER TITLE -->
        <div class="profile-usertitle">
          <div class="profile-usertitle-name">
            <%= @user.name %>
          </div>
        </div>
        <!-- END SIDEBAR USER TITLE -->
        <!-- SIDEBAR MENU -->
        <div class="profile-usermenu">
          <ul class="nav">
            <% if user_signed_in? && current_user == @user %>
                <li><%= link_to '<i class="fa fa-pencil"></i> Edit profile'.html_safe, edit_user_registration_path %></li>
            <% end %>
            <li class="active"><%= link_to '<i class="fa fa-link"></i> CODElit Profile'.html_safe, user_url(@user) %></li>
            <%= render 'links' %>
          </ul>
        </div>
        <!-- END MENU -->
      </div>
    </div>
    <%= render 'user_courses' %>
  </div>
</div>
