<div class="container" style="padding-top: 60px;">
  <h1 class="page-header">Edit Profile</h1>
  <div class="row">
    <!-- left column -->
    <div class="col-md-4 col-sm-6">
      <div class="text-center">
        <%= link_to "https://en.gravatar.com/" do %>
            <%= gravatar_tag current_user.email, size: 200, html: {class: "avatar img-circle img-thumbnail", alt: "avatar" } %>
        <% end %>
      </div>
    </div>
    <!-- edit form column -->
    <div class="col-md-8 col-sm-6 personal-info">
      <h3>Personal info</h3>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>
          <div class="form-group">
            <%= f.input :name, autofocus: true, required: true, input_html: {class: "form-control"} %>
          </div>
          <div class="form-group">
            <%= f.input :email, required: true, input_html: {class: "form-control"} %>
          </div>
          <div class="form-group">
            <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false, input_html: {class: "form-control"} %>
          </div>
          <div class="form-group">
            <%= f.input :password_confirmation, required: false %>
          </div>
          <div class="form-group">
            <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true, input_html: {class: "form-control"} %>
          </div>

          <div class="form-group">
            <%= f.button :submit, "Update", class: "btn btn-primary" %>
          </div>
      <% end %>
      <h3 class="bg-danger text-danger">Cancel my account</h3>

      <p class="bg-danger text-danger">Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

      <%= link_to "Back", :back %>
    </div>
  </div>
</div>
