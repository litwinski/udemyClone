<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
      <div class="account-wall">
        <div id="my-tab-content" class="tab-content">
          <div class="tab-pane active" id="login">
            <div class="text-center"><i class="fa fa-user fa-5x text-center"></i></div>

            <%= link_to '<i class="fa fa-google-plus-square"></i> Log in with Google+'.html_safe, user_omniauth_authorize_path(:google_oauth2), class: "btn btn-lg btn-danger btn-block" %>
            <%= link_to '<i class="fa fa-facebook-square"></i> Log in with Facebook'.html_safe, user_omniauth_authorize_path(:facebook), class: "btn btn-lg btn-primary btn-block" %>
            <%= link_to '<i class="fa fa-github-square"></i> Log in with GitHub'.html_safe, user_omniauth_authorize_path(:github), class: "btn btn-lg btn-default btn-block" %>

            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
                <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Email", input_html: {class: "form-control email" } %>
                <%= f.input :password, required: true, label: false, placeholder: "Password", input_html: {class: "form-control password" } %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

                <%= f.button :submit, "Log in", class: "btn btn-lg btn-primary btn-block" %>
                <% render "devise/shared/links" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>